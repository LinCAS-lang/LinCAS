module Test::Assert {

    class AssertionError inherits RuntimeError {}

    let assert_block(message := "block assertion failed") {
        if !(yield) { raise new AssertionError(message) }
    }
    
    let assert(val) {
        assert_block(
            "Expected truthy value but ".concat(val.to_s," found")
        ) { !!val }
    }

    let refute(val) {
        assert_block(
            "Expected falsey value but ".concat(val.to_s," found")
        ) { !val }
    }

    let assert_eq(expected, given) {
        assert_block(
            expected.to_s().concat(
                " was expected but ",given.to_s(),
                " was given"
            )
        ) { expected == given }
    }

    let assert_not_eq(val1, val2) {
        assert_block(
            val1.to_s().concat(
                " was not expected to be ",given.to_s()
            )
        ) { val1 != val2 }
    }

    let assert_true(val) { 
        assert_block(
            val.to_s().concat(" was expected to be true")
        ) { val == true } 
    }

    let assert_false(val) { 
        assert_block(
            val.to_s().concat(" was expected to be true")
        ) { val == true } 
    }

    let assert_null(val) {
        assert_block(
            val.to_s().concat(" was expected to be null")
        ) { val == null }
    }

}